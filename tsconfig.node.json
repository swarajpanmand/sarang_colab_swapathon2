{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "ESNext",
      "target": "ES2020",
      "jsx": "react-jsx",             // ðŸ‘ˆ Add this line
      "outDir": "./dist",
      "rootDir": "./",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "types": ["node"]
    },
    "include": ["**/*.ts", "**/*.tsx"],  // ðŸ‘ˆ Include .tsx files
    "exclude": ["node_modules", "dist"]
  }
  